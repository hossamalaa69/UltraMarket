<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_large"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/splash_logo_margin"
        android:contentDescription="@string/logo_image"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_text" />

    <TextView
        android:id="@+id/sign_in_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:gravity="center"
        android:text="@string/sign_in"
        android:textColor="@color/White"
        android:textSize="44sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_tv"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/sign_in_nenjoy_more_features_nmade_for_you"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/email_button"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/google_button"
        android:layout_alignStart="@id/google_button"
        android:layout_alignEnd="@id/google_button"
        android:layout_centerHorizontal="true"
        android:text="@string/fui_sign_in_with_email" />

    <Button
        android:id="@+id/google_button"
        style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/fui_sign_in_with_google" />

</RelativeLayout>