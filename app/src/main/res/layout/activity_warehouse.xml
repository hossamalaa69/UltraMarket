<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_background"
    tools:context=".ui.adminLayer.WarehouseActivity">

    <ImageView
        android:id="@+id/logo_market"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/sign_up_background2"
        android:contentDescription="@string/logo_image"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_text"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_brands"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:background="@drawable/btn_curved_pink"
            android:onClick="openBrands"
            android:text="Brands"/>

        <Button
            android:id="@+id/btn_categories"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:background="@drawable/btn_curved_pink"
            android:onClick="openCategories"
            android:text="Categories"/>

        <Button
            android:id="@+id/products"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:background="@drawable/btn_curved_pink"
            android:text="Products"/>
    </LinearLayout>

</RelativeLayout>