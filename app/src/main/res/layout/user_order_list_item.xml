<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_order_list_item_products"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/pink3"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/products"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@android:color/white"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:drawableEndCompat="@drawable/arrow_down_24"
            app:drawableStartCompat="@drawable/ic_cart_white"
            app:drawableTint="@android:color/white"
            tools:ignore="MissingPrefix" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_order_list_item_rv"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:padding="5dp" />

        <TextView
            android:id="@+id/user_order_list_item_total_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/purple2"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
            tools:ignore="MissingPrefix"
            tools:text="Total price : 2344 $" />

        <TextView
            android:id="@+id/user_order_list_item_order_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/purple2"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:drawableStartCompat="@drawable/time_24"
            tools:ignore="MissingPrefix"
            tools:text="@string/ordered_at" />

        <TextView
            android:id="@+id/user_order_list_item_receive_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/purple2"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeTextType="uniform"
            app:drawableStartCompat="@drawable/timer_24"
            tools:ignore="MissingPrefix"
            tools:text="@string/arrives_at" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
