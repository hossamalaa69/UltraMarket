<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/user_product_item_margin_top"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:minWidth="120dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_product_item_image"
        android:layout_width="100dp"
        android:layout_height="@dimen/product_item_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/product_item_image_margin"
        android:layout_marginTop="@dimen/product_item_image_margin"
        android:transitionName="image"
        android:layout_marginRight="@dimen/product_item_image_margin"
        android:contentDescription="@string/product_image"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/user_product_item_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:transitionName="name"
        android:layout_marginLeft="@dimen/product_item_name_margin"
        android:layout_marginRight="@dimen/product_item_name_margin"
        android:background="@android:color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/product_item_image_padding"
        android:textColor="@android:color/black"
        app:autoSizeTextType="uniform"
        tools:text="Book" />

    <include layout="@layout/user_price_layout" />
</LinearLayout>
